{% extends 'baseBO.html.twig' %}

{% block title %}Articles list{% endblock %}

{% block body %}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-14 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Articles</h1>
                            <div class="col-md-6 ">
                                <a class="btn btn-outline-info btn-icon-text" href="{{ path('article_new') }}"><i
                                            class="mdi mdi-plus-circle-outline"></i></a>
                            </div>


                        <div class="table-responsive">
                            <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>CreatedAt</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for article in articles %}
                                <tr>
                                    <td>{{ article.id }}</td>
                                    <td>{{ article.title }}</td>
                                    <td>{{ article.getIdCategory() }}</td>
                                    <td>{{ article.CreatedAt ? article.CreatedAt|date('Y-m-d') : '' }}</td>
                                    <td>
                                        <a href="{{ path('article_show', {'id': article.id}) }}"  class="btn btn-outline-info btn-icon-text">
                                            <i class="mdi mdi-magnify-plus"></i>
                                        <a href="{{ path('article_edit', {'id': article.id}) }}"  class="btn btn-outline-info btn-icon-text">
                                            <i class="mdi mdi-lead-pencil"></i></a>
                                    </td>
                                    <td>
                                        {{ include('article/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">no articles found</td>
                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                        </div>
                        {{ knp_pagination_render(articles) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
