{% extends 'baseBO.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
<div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="card-title">Reclamation</h4>
                                </div>
                                <div class="col-md-6" align="right">
                                <div class="btn-group">
                                    
                                            <a class="btn btn-secondary" href="{{ path('reclamation_take', {'id': reclamation.id}) }}"><i
                                            class="mdi mdi-briefcase"></i></a>
                                            <a class="btn btn-secondary" href="{{ path('reclamation_done', {'id': reclamation.id}) }}"><i
                                            class="mdi mdi-check"></i></a>
                                         
                                                    
                                        {{ include('reclamation/_delete_form.html.twig') }}
                                    </div>
                                </div>
                                </div>
                            </div>
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ reclamation.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Object</th>
                                        <td>{{ reclamation.object }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ reclamation.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Type</th>
                                        <td>{{ reclamation.type }}</td>
                                    </tr>

                                    <tr>
                                        <th>CreatedAt</th>
                                        <td>{{ reclamation.createdAt ? reclamation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
