{% extends 'baseBO.html.twig' %}

{% block title %}Excursion{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="card-title">Excursion</h4>
                                </div>
                                <div class="col-md-6 text-right">
                                    <div class="btn-group">
                                        <a href="{{ path('excursion_index') }}"
                                           class="btn btn-outline-light btn-icon-text"><i
                                                    class="mdi mdi-arrow-left btn-icon-prepend"></i></a>
                                        {{ include('excursion/_delete_form.html.twig') }}
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive pt-3">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ excursion.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Durée</th>
                                        <td>{{ excursion.duration }}</td>
                                    </tr>
                                    <tr>
                                        <th>Libelle</th>
                                        <td>{{ excursion.libelle }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>

                                        <td>{{ excursion.description|raw  }}</td>

                                    </tr>
                                    <tr>
                                        <th>Programme</th>
                                        <td>{{ excursion.programme|raw }}</td>
                                    </tr>
                                    <tr>
                                        <th>Ville</th>
                                        <td>{{ excursion.ville }}</td>
                                    </tr>
                                    <tr>
                                        <th>Prix</th>
                                        <td>{{ excursion.prix }}DT</td>
                                    </tr>
                                    <tr>
                                        <th>Catégorie</th>
                                        <td>{{ categorie }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                {% for f in excursion.excursionimages %}
                                    <div class="col-md-4">

                                        <img class="img-thumbnail" src="{{ vich_uploader_asset(f, 'imageFile') }}"/>
                                    </div>
                                {% endfor %}
                            </div>

                            <a class="btn btn-outline-primary btn-icon-text"
                               href="{{ path('excursion_edit', {'id': excursion.id}) }}"><i
                                        class="mdi mdi-grease-pencil"></i></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
